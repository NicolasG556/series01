{% extends 'base.html.twig' %}


{% block body %}
    <h1>C'est du Test! </h1>

    {# Création de variables #}
    {% set name = "Nicolas" %}

    <h2>{{ name }}</h2>


    {# Création d'un tableau #}
    {% set colors = ['blue', 'yellow', 'purple'] %}
    {% for color in colors %}
        <div style="background-color: {{ color }}">{{ color }}</div>

        {% if color != 'red' %}
            <div>Index : {{ loop.index }}</div>
            <div> style="background-color: {{ color }}">{{ color }}</div>
        {% endif %}


        {# Usage de loop #}

        {% if loop.first %}
            <div>Premiere itération</div>
            <div>Nombre d'éléments : {{ loop.length }}</div>
        {% endif %}

        {% if loop.last %}
            <div>Derniere itération</div>
            <div>Nombre d'éléments : {{ loop.length }}</div>
        {% endif %}

    {% endfor %}

    {# Création d'un objet #}

    {% set book = {
        title : "Mon livre",
        year : 2021,
        author : "John Doe"
    } %}

    <h2>{{ book.title }}</h2>
    {% for key, val in book %}
        <div>{{ key }} : {{ val }}</div>
    {% endfor %}

    {# Filtres #}

    <h2>Quelques Filtres</h2>
    <div>{{ name|upper }}, {{ name|length }}</div>
    <div>{{ colors|length }} couleurs</div>
    <div>Mon tableau : {{ colors|join("-") }}</div>
    <div>{{ "now"|date('Y-m-d') }}</div>



